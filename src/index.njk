<!DOCTYPE html>
<html lang="{{ config.project_info.lang }}"
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="icon" href="/favicon.ico" sizes="48x48" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" href="/favicon.svg" sizes="any" type="image/svg+xml" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/manifest.json" />

  <title>Résumé for {{ config.basics.name }}</title>

  <style>
    {% set css %}
    {% include "styles/tailwind.css" %}
    {% include "../node_modules/@fortawesome/fontawesome-svg-core/styles.css" %}
    {% endset %}
    {{ css | postCss | safe }}
  </style>
</head>

<body class="bg-white text-slate-500 dark:bg-slate-900 dark:text-slate-400">
  <div id="resume" class="h-resume">
    <div id="header" class="sticky top-0 w-full backdrop-blur">
      <div id="basics_intro" class="p-contact h-card">
        <h1>
          <span class="p-name">{{ config.basics.name }}</span>
          |
          <!-- The h-card microformat doesn't have a property for pronouns -->
          <span class="p-note">{{ config.basics.pronouns }}</span>
          |
          <span class="p-locality">{{ config.basics.location.city }}</span>,
          <span class="p-region">{{ config.basics.location.region }}</span>,
          <span class="p-country-name">{{ config.basics.location.countryCode }}</span>
        </h1>
      </div>

      <div id="basics_contacts" class="flex flex-wrap p-2 gap-2 items-center justify-center">
        {%- for entry in config.basics.profiles %}
          <div class="flex-none w-60 rounded-md px-3 text-black text-center bg-purple-500 hover:bg-sky-700">
            {{ entry.icon | safe }}
            <a class="p-contact h-card" href="{{ entry.url }}">{{ entry.username }}</a>
          </div>
        {%- endfor %}
      </div>
    </div>
  
    <div id="summary" class="rsection">
      <div class="rsection-header">
        <h2>Summary</h2>
      </div>
      <div class="rsection-content">
        <p class="p-summary">{{ config.basics.summary }}</p>
      </div>
    </div>

    <div id="jobs" class="rsection">
      <div class="rsection-header">
        <h2>Professional Experience</h2>
      </div>
      <div class="rsection-content">
        {%- for entry in config.work %}
          <div class="p-experience h-event">
            <div>
              <h4>
                <span class="p-name">{{ entry.name }}</span>
                <span class="p-location h-card">
                  {%  if entry.location | isstring %}
                  <span class="p-location">{{ entry.location }}</span>
                  {% else %}
                  <span class="p-location h-card">
                    <span class="p-locality">{{ entry.location.locality }}</span>,
                    <span class="p-region">{{ entry.location.region }}</span>,
                    <span class="p-country-name">{{ entry.location.countryCode }}</span>
                  </span>
                  {% endif %}
                </span>
                  <span class="dt-start">{{ entry.startDate }}</span>-<span class="dt-end">{{ entry.endDate }}</span>
              </h4>
            </div>
            <div class="p-summary">{{ entry.position }}</div>
            <div class="p-description">
              <ul>
                {%- for highlight in entry.highlights %}
                  <li>{{ highlight }}</li>
                {%- endfor %}
                </ul>
            </div>
          </div>
        {%- endfor %}
      </div>
    </div>

    <div id="hobbies" class="rsection">
      <div class="rsection-header">
        <h2>Hobbyist Experience</h2>
      </div>
      <div class="rsection-content">
        <ul>
          {%- for entry in config.interests %}
            <li class="p-skill">{{ entry.name }}</li>
          {%- endfor %}
        </ul>
      </div>
    </div>

    <div id="education" class="rsection">
      <div class="rsection-header">
        <h2>Educational Experience</h2>
      </div>
      <div class="rsection-content">
        {% for entry in config.education %}
          <div class="p-education h-event">
            <div>
              <h4>
                <span class="p-name">{{ entry.institution }}</span>
                <span class="p-location h-card">
                  <span class="p-locality">{{ entry.location.locality }}</span>,
                  <span class="p-region">{{ entry.location.region }}</span>,
                    <span class="p-country-name">{{ entry.location.countryCode}}</span>
                </span>
                <span class="dt-start">{{ entry.startDate }}</span>-<span class="dt-end">{{ entry.endDate }}</span>
              </div>
            </h4>
            <div class="p-summary">
              Coursework in: {{ entry.courses | join(", ") | capitalize }}
            </div>
            </div>
        {% endfor %}
      </div>
    </div>
  </div>
</body>
</html>
